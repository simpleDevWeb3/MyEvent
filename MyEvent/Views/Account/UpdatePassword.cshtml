@model UpdatePasswordVM

@{
    ViewBag.Title = "Account | Update Password";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Update Password - My Event</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/style/Update.css" />
</head>
<body>

    <main class="login-wrapper">
        <div class="login-container">

            <!-- Heading goes OUTSIDE the form -->
            <img style="border-radius:30%; object-fit:cover; width:30%; height:30%;"
                 src="~/images/Logo/MyEvently.png" />
            <h2 class="title">Update Password</h2>

            <form method="post" class="form">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-group">
                    <label asp-for="Current">Current Password</label>
                    <input asp-for="Current" type="password" />
                    <span asp-validation-for="Current"></span>
                </div>

                <div class="form-group">
                    <label asp-for="New">New Password</label>
                    <input asp-for="New" type="password" />
                    <span asp-validation-for="New"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Confirm">Confirm New Password</label>
                    <input asp-for="Confirm" type="password" />
                    <span asp-validation-for="Confirm"></span>
                </div>

                <div class="form-actions">
                    <button class="login-btn">Update</button>
                    <button type="reset" class="reset-btn">Reset</button>
                </div>
            </form>

            <p class="links">
                [ <a href="/Account/Profile">Back to Profile</a> ]
            </p>
        </div>
    </main>

    <script>
        $.validator.setDefaults({ ignore: '' });
    </script>
</body>
</html>

