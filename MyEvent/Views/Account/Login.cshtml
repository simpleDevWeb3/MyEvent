@model LoginVM
@{
    ViewBag.Title = "Account | Login";
    	Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login - My Event</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/style/Login.css" />
    <!-- Spotify-Inspired Styles -->
   
</head>
<body>

    <main class="login-wrapper">
        <div class="login-container">

            <!-- Heading goes OUTSIDE the form -->
            <img style=" border-radius:30%; object-fit:cover; width:30%; height:30%;" src="~/images/Logo/MyEvently.png" />
            <h2 class="title">Log in to My Event</h2> 
           

            <form method="post" class="form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="validation-summary">
                    <!-- Validation summary goes here -->
                </div>



                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="email" id="Email" name="Email" />
                    <span data-valmsg-for="Email"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" />
                    <span data-valmsg-for="Password"></span>
                </div>

                <div class="form-group remember-me">
                    <label>
                        <input type="checkbox" id="RememberMe" name="RememberMe" />
                        Remember Me
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="login-btn">Login</button>
                    <button type="reset" class="reset-btn">Reset</button>
                </div>
            </form>

            <p class="links">
                [ <a href="/Account/RegisterSelect">Register</a> |
                <a href="/Account/ResetPassword">Reset Password</a> ]
            </p>
        </div>
    </main>

</body>
</html>
