@model List<MyEvent.Models.DB.FollowedEvent>

<style>
    .event-container {
        width: 90%;
        max-width: 800px;
        margin: 20px auto;
        background-color: #222;
        color: white;
        padding: 20px;
        border-radius: 8px;
    }

    .event-heading {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
    }

    .event-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .event-table th, .event-table td {
            border: 1px solid white;
            padding: 10px;
            text-align: left;
        }

        .event-table th {
            background-color: #444;
        }

        .event-table tr:nth-child(even) {
            background-color: #333;
        }

        .event-table tr:nth-child(odd) {
            background-color: #222;
        }

        .event-table tr:hover {
            background-color: #555;
        }

    .action-button {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 4px;
    }

        .action-button:hover {
            background-color: #ff6666;
        }

        .action-button:disabled {
            background-color: gray;
            cursor: not-allowed;
        }

    .pay-button {
        background-color: green;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 4px;
    }

        .pay-button:hover {
            background-color: #66ff66;
        }

    /* Slide-in delete message */
    .delete-message {
        position: fixed;
        top: 100px;
        right: -400px;
        padding: 15px 25px;
        border-radius: 6px;
        color: white;
        font-weight: bold;
        background-color: darkorange;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: right 0.6s ease-in-out;
        z-index: 1000;
    }

        .delete-message.show {
            right: 20px;
        }

    .flash-message {
        position: fixed;
        top: 100px;
        right: -400px;
        padding: 15px 25px;
        border-radius: 6px;
        color: white;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: right 0.6s ease-in-out;
        z-index: 1000;
    }

        .flash-message.show {
            right: 20px;
        }
</style>

<div class="event-container">
    <h2 class="event-heading">Favourite Events</h2>

    @if (Model?.Any() == true)
    {
        <!-- Batch Delete form ONLY (wraps checkboxes + Delete Selected) -->
        <form asp-controller="Favourite" asp-action="BatchDelete" method="post" id="batch-delete-form">
            <table class="event-table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="select-all" />
                        </th>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th>Organizer</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="ids" value="@item.Id" class="row-checkbox" />
                            </td>
                            <td>@item.Event.Title</td>
                            <td>@item.Event.Detail?.Date.ToString("yyyy-MM-dd")</td>
                            <td>@(item.Event.Detail != null ? $"{item.Event.Detail.StartTime} - {item.Event.Detail.EndTime}" : "")</td>
                            <td>@item.Event.Address?.City, @item.Event.Address?.State</td>
                            <td>@item.Event.Detail?.Organizer</td>
                            <td>
                                <div style="display:flex; gap:8px;">
                                    <!-- NOTE: Buttons use form="..." to submit external hidden forms (no nested forms) -->
                                    <button type="submit" class="action-button" form="deleteForm_@item.Id">Delete</button>
                                    <button type="submit" class="pay-button" form="payForm_@item.Event.Id">Pay</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div style="text-align:right; margin-top:10px;">
                <button type="submit" class="action-button" id="batch-delete-btn" disabled>Delete Selected</button>
            </div>
        </form>

        <!-- Hidden individual forms (outside the batch form). Buttons in the rows target these by id via form="..." -->
        @foreach (var item in Model)
        {
            <form id="deleteForm_@item.Id" asp-controller="Favourite" asp-action="DeleteFollowed" method="post" style="display:none;">
                <input type="hidden" name="id" value="@item.Id" />
            </form>

            <form id="payForm_@item.Event.Id" asp-controller="Payment" asp-action="PaymentInfo" method="post" style="display:none;">
                <input type="hidden" name="eventId" value="@item.Event.Id" />
            </form>
        }
    }
    else
    {
        <p style="text-align:center;">You have no favourite events yet.</p>
    }
</div>

<!-- Flash messages -->
@if (TempData.ContainsKey("Followed"))
{
    <div id="flash-followed" class="flash-message" style="background-color:#28a745; top:100px;">
        @TempData["Followed"]
    </div>
}

@if (TempData.ContainsKey("FollowedError"))
{
    <div id="flash-followedError" class="flash-message" style="background-color:red; top:100px;">
        @TempData["FollowedError"]
    </div>
}

@if (TempData.ContainsKey("Delete"))
{
    <div id="flash-delete" class="delete-message">
        @TempData["Delete"]
    </div>
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Flash messages handling
        ['flash-delete', 'flash-followed', 'flash-followedError'].forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                el.classList.remove('show');
                setTimeout(() => el.classList.add('show'), 100);
                setTimeout(() => el.classList.remove('show'), 3000);
            }
        });

        const selectAll = document.getElementById("select-all");
        const checkboxes = document.querySelectorAll(".row-checkbox");
        const batchDeleteBtn = document.getElementById("batch-delete-btn");

        function toggleBatchDelete() {
            const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
            batchDeleteBtn.disabled = !anyChecked;
        }

        // Select/Deselect all
        selectAll?.addEventListener("change", function () {
            const checked = this.checked;
            checkboxes.forEach(cb => cb.checked = checked);
            toggleBatchDelete();
        });

        // Row checkboxes
        checkboxes.forEach(cb => {
            cb.addEventListener("change", () => {
                toggleBatchDelete();
                if (!cb.checked) selectAll.checked = false;
                if (Array.from(checkboxes).every(x => x.checked)) selectAll.checked = true;
            });
        });

        // Initialize button state
        toggleBatchDelete();
    });
</script>
