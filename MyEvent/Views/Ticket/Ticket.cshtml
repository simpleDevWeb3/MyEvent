@model List<MyEvent.Models.DB.Ticket>

<style>
    .ticket-container {
        width: 800px;
        margin: 20px auto;
        background-color: #222;
        color: white;
        padding: 20px;
        border-radius: 8px;
    }

    .ticket-heading {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
    }

    .ticket-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .ticket-table th, .ticket-table td {
            border: 1px solid white;
            padding: 10px;
            text-align: left;
        }

        .ticket-table th {
            background-color: #444;
        }

        .ticket-table tr:nth-child(even) {
            background-color: #333;
        }

        .ticket-table tr:nth-child(odd) {
            background-color: #222;
        }

        .ticket-table tr:hover {
            background-color: #555;
        }

    .action-button {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 4px;
    }

    .action-button:hover {
        background-color: #ff6666;
    }

    /* Slide-in messages */
    .delete-message, .payment-message {
        position: fixed;
        top: 100px;
        right: -400px;
        padding: 15px 25px;
        border-radius: 6px;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: right 0.6s ease-in-out;
        z-index: 1000;
        color: white;
    }

    .delete-message {
        background-color: darkorange;
    }

    .payment-message {
        background-color: #28a745;
    }

        .delete-message.show, .payment-message.show {
            right: 20px;
        }
</style>

<div class="ticket-container">
    <h2 class="ticket-heading">My Tickets</h2>

    @if (Model?.Any() == true)
    {
        <table class="ticket-table">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Holder Name</th>
                    <th>Email</th>
                    <th>Purchase Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketId</td>
                        <td>@ticket.Event?.Title</td>
                        <td>@ticket.Event?.Detail?.Date.ToString("yyyy-MM-dd")</td>
                        <td>@(ticket.Event?.Detail != null ? $"{ticket.Event.Detail.StartTime} - {ticket.Event.Detail.EndTime}" : "")</td>
                        <td>@ticket.HolderName</td>
                        <td>@ticket.HolderEmail</td>
                        <td>@ticket.PurchaseDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <form asp-controller="Ticket" asp-action="DeleteTicket" method="post" style="margin:0;">
                                <input type="hidden" name="ticketId" value="@ticket.TicketId" />
                                <button type="submit" class="action-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="text-align:center;">You have no tickets yet.</p>
    }
</div>

<!-- TempData Messages -->
@if (TempData.ContainsKey("Delete"))
{
    <div id="flash-delete" class="delete-message">
        @TempData["Delete"]
    </div>
}

@if (TempData.ContainsKey("Success"))
{
    <div id="flash-success" class="payment-message">
        @TempData["Success"]
    </div>
}

@if (TempData.ContainsKey("Error"))
{
    <div id="flash-error" class="payment-message" style="background-color:#dc3545">
        @TempData["Error"]
    </div>
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Select all messages (payment + delete)
        const messages = document.querySelectorAll(".payment-message, .delete-message");

        messages.forEach((msg) => {
            // Start hidden
            msg.classList.remove("show");

            // Slide in after short delay
            setTimeout(() => msg.classList.add("show"), 100);

            // Slide out after 3 seconds
            setTimeout(() => msg.classList.remove("show"), 3000);
        });
    });
</script>
