@model List<MyEvent.Models.DB.Ticket>

<style>
    .ticket-container {
        width: 90%;
        max-width: 800px;
        margin: 20px auto;
        background-color: #222;
        color: white;
        padding: 20px;
        border-radius: 8px;
    }

    .ticket-heading {
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
    }

    .ticket-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .ticket-table th, .ticket-table td {
            border: 1px solid white;
            padding: 10px;
            text-align: left;
        }

        .ticket-table th {
            background-color: #444;
        }

        .ticket-table tr:nth-child(even) {
            background-color: #333;
        }

        .ticket-table tr:nth-child(odd) {
            background-color: #222;
        }

        .ticket-table tr:hover {
            background-color: #555;
        }

    .action-button {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 4px;
    }

        .action-button:hover {
            background-color: #ff6666;
        }

        .action-button:disabled {
            background-color: gray;
            cursor: not-allowed;
        }

    .pay-button {
        background-color: green;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 4px;
    }

        .pay-button:hover {
            background-color: #66ff66;
        }

    .delete-message, .payment-message {
        position: fixed;
        top: 100px;
        right: -400px;
        padding: 15px 25px;
        border-radius: 6px;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: right 0.6s ease-in-out;
        z-index: 1000;
        color: white;
    }

    .delete-message {
        background-color: darkorange;
    }

    .payment-message {
        background-color: #28a745;
    }

        .delete-message.show, .payment-message.show {
            right: 20px;
        }
</style>

<div class="ticket-container">
    <h2 class="ticket-heading">My Tickets</h2>

    @if (Model?.Any() == true)
    {
        <!-- Batch Delete form ONLY -->
        <form asp-controller="Ticket" asp-action="BatchDeleteTickets" method="post" id="batch-delete-form">
            <table class="ticket-table">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="select-all" /></th>
                        <th>Ticket ID</th>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Holder Name</th>
                        <th>Email</th>
                        <th>Purchase Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="ids" value="@ticket.TicketId" class="row-checkbox" />
                            </td>
                            <td>@ticket.TicketId</td>
                            <td>@ticket.Event?.Title</td>
                            <td>@ticket.Event?.Detail?.Date.ToString("yyyy-MM-dd")</td>
                            <td>@(ticket.Event?.Detail != null ? $"{ticket.Event.Detail.StartTime} - {ticket.Event.Detail.EndTime}" : "")</td>
                            <td>@ticket.HolderName</td>
                            <td>@ticket.HolderEmail</td>
                            <td>@ticket.PurchaseDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div style="display:flex; gap:8px;">
                                    <!-- Buttons that target hidden forms outside -->
                                    <button type="submit" class="action-button" form="deleteForm_@ticket.TicketId">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div style="text-align:right; margin-top:10px;">
                <button type="submit" class="action-button" id="batch-delete-btn" disabled>Delete Selected</button>
            </div>
        </form>

        <!-- Hidden external forms -->
        @foreach (var ticket in Model)
        {
            <form id="deleteForm_@ticket.TicketId" asp-controller="Ticket" asp-action="DeleteTicket" method="post" style="display:none;">
                <input type="hidden" name="ticketId" value="@ticket.TicketId" />
            </form>
        }
    }
    else
    {
        <p style="text-align:center;">You have no tickets yet.</p>
    }
</div>

<!-- TempData Messages -->
@if (TempData.ContainsKey("Delete"))
{
    <div id="flash-delete" class="delete-message">@TempData["Delete"]</div>
}
@if (TempData.ContainsKey("Success"))
{
    <div id="flash-success" class="payment-message">@TempData["Success"]</div>
}
@if (TempData.ContainsKey("Error"))
{
    <div id="flash-error" class="payment-message" style="background-color:#dc3545">@TempData["Error"]</div>
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Flash messages
        document.querySelectorAll(".payment-message, .delete-message").forEach((msg) => {
            msg.classList.remove("show");
            setTimeout(() => msg.classList.add("show"), 100);
            setTimeout(() => msg.classList.remove("show"), 3000);
        });

        // Select/Deselect all checkboxes
        const selectAll = document.getElementById("select-all");
        const checkboxes = document.querySelectorAll(".row-checkbox");
        const batchDeleteBtn = document.getElementById("batch-delete-btn");

        function toggleBatchDelete() {
            const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
            batchDeleteBtn.disabled = !anyChecked;
        }

        selectAll?.addEventListener("change", function () {
            const checked = this.checked;
            checkboxes.forEach(cb => cb.checked = checked);
            toggleBatchDelete();
        });

        checkboxes.forEach(cb => cb.addEventListener("change", toggleBatchDelete));

        toggleBatchDelete();
    });
</script>
