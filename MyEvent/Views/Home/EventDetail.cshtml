@using MyEvent.Models
@model MyEvent.Models.DB.Event;


<main class="home-container">

    <div class="Main-view">
        <div class="breadCrump"></div>
        <div class="event-detail event-detail__img-container">
             <img src="@Model.ImageUrl" />
        </div>

        <h1>@Model.Title</h1>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Date:</strong> @Model.Detail.Date.ToString("MMMM dd, yyyy")</p>
        <p><strong>Location:</strong> @Model.Address.City, @Model.Address.Street</p>
        <p><strong>Description:</strong> @Model.Detail?.Description</p>
    </div>


</main>
@section Scripts {
    <script type="module">
        import { init as DetailInit } from '/scripts/DetailScripts/Controller.js';

        DetailInit();

    </script>
}