<style>
    .content {
        background: #272626;
    }

    event_created_list,
    body {
        overflow-y: scroll;
        color: white;
    }

    h1 {
        text-align: center;
        margin: 10px auto 0 auto;
    }

    .event_created_list button {
        display: inline-block;
        background-color: #707070;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        width: 100px;
    }

    .create_event-backBtn {
        margin: auto auto 0 50px;
    }

    .event_created_list button:hover {
        background-color: #505050;
    }

    .event_created_list button.btn-Delete {
        background-color: red;
    }

    .event_created_list button.btn-Delete:hover {
        background-color: #c90000;
    }

    /* Table ---------------------------------------------------------------------- */

    .table {
        border-collapse: collapse;
        margin-left: 50px;
        margin-bottom: 25px;
    }

    .table th, 
    .table td {
        border: 1px solid #333;
        padding: 5px;
    }

    .table th {
        background: #666;
        color: #fff;
    }

    .table tr:hover td {
        background: black;
    }

    .detail th {
        text-align: left;
    }

    .table th a {
        color: inherit;
        display: block;
    }

    .table th a.asc::after {
        content: ' ▴';
    }

    .table th a.des::after {
        content: ' ▾';
    }

    .table tr:has(input:checked) td {
        background: tomato;
    }

    .table td:last-child {
        position: relative;
    }

    .table .popup {
        background: #fff;
        border: inherit;
        padding: inherit;
        position: absolute;
        z-index: 1;
        white-space: nowrap;
        top: 50%;
        left: 100%;
        transform: translate(5px, -50%);
        display: none;
    }

    .table img.popup {
        padding: 0;
    }

    .table tr:hover .popup {
        display: block;
    }

    #name {
        margin-left: 50px;
        width: 500px;
        height: 30px;
    }

    #name + button {
        margin: 20px auto;
    }

</style>

<div class="event_created_list" style="display: block; flex:none; width:100%">
    <h1>My Events</h1>
    <button class="create_event-backBtn">Back</button>

    <form data-ajax="true"
          data-ajax-update="#target"
          data-ajax-loading="#loader"
          id="f">
        @Html.TextBox("name", "",
                      new { type = "search", autofocus = "", data_trim = "" })
        <button>Search</button>
        <img src="/images/Button/loader.gif" id="loader" style="display: none">
    </form>

    <div id="target">
        <partial name="_event_listing" />
    </div>
</div>